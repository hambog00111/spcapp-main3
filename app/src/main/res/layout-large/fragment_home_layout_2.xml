<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/linera">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:gravity="center">
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/spc_logo2"
                        android:id="@+id/imageView2"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="10dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Republic of the Philippines"
                            android:textColor="@color/white"
                            android:layout_marginTop="5dp"
                            android:textSize="17dp"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CITY GOVERNMENT OF SAN PABLO"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="23sp"
                            android:layout_marginTop="3dp"

                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                   android:layout_height="330dp"
                    android:id="@+id/home_viewpager"
                   android:fitsSystemWindows="true"
                   android:layout_gravity="center"
                   android:scaleType="centerCrop"
                   android:padding="10dp"
                   android:layout_margin="10dp"
        />



        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EVENTS AND ANNOUNCEMENTS"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
        />


        <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/app"
                android:id="@+id/events_viewpager"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:fitsSystemWindows="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitCenter"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My iSanPablo"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
        />

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_business_in_the_city"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/logo_bc"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BUSINESS IN THE CITY"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"
                        android:padding="3dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_my_taxes"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/logo_mt"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MY TAXES"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/white"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_online_request"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/logo_maor"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MY APP ONLINE REQUEST"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"
                        android:padding="3dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_city_hot_lines"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/logo_ch"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CITY HOTLINES"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/white"/>

            </LinearLayout>
        </LinearLayout>



        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_gov_online_service"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/logo_gos"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GOVERNMENT ONLINE SEVICES"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"
                        android:padding="3dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_city_employees_corner"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/logo_cec"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CITY EMPLOYEES CORNER"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/white"/>

            </LinearLayout>
        </LinearLayout>




        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
          >
            <ScrollView android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical">


                        <TextView
                                android:layout_width="320dp"
                                android:layout_height="wrap_content"
                                android:text="JOBS OFFER"
                                android:textStyle="bold"

                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:textSize="25sp"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center"
                        />


                        <LinearLayout
                                android:layout_height="300dp"
                                android:layout_width="300dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:background="@drawable/text_border">


                            <Button
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="150dp"
                                    android:background="@drawable/csc"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="20dp"
                                    android:id="@+id/btn_home_csc"/>

                            <Button
                                    android:layout_width="280dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/philjob"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    android:id="@+id/btn_home_phil_job"/>


                        </LinearLayout>

                        <TextView
                                android:layout_width="320dp"
                                android:layout_height="wrap_content"
                                android:text="BIDS AND AWARDS"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:paddingBottom="5dp"
                                android:textSize="25sp"
                                android:layout_marginTop="20dp"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:layout_marginBottom="5dp"
                                android:layout_gravity="center"/>


                        <Button
                                android:layout_width="300dp"
                                android:layout_height="100dp"
                                android:background="@drawable/philgeps"
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:id="@+id/btn_home_philgeps"/>

                    </LinearLayout>

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="FEATURED LINKS"
                android:textStyle="bold"

                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
        />


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center"
        >

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginBottom="5dp">

                <Button android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/facebook"
                        android:layout_marginRight="10dp"
                        android:id="@+id/btn_fb_cio"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="CIO San Pablo FB Page"
                          android:textColor="@color/white"
                          android:textSize="15sp"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:id="@+id/text_fb_cio"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginBottom="5dp">

                <Button android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/facebook"
                        android:layout_marginRight="10dp"
                        android:id="@+id/btn_fb_tourism"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Tourism San Pablo FB page"
                          android:textColor="@color/white"
                          android:textSize="15sp"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:id="@+id/text_fb_tourism"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginBottom="5dp">

                <Button android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/facebook"
                        android:layout_marginRight="10dp"
                        android:id="@+id/btn_fb_lgu"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="San Pablo LGU FB Page"
                          android:textColor="@color/white"
                          android:textSize="15sp"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:id="@+id/text_fb_lgu"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginBottom="5dp">

                <Button android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/facebook"
                        android:layout_marginRight="10dp"
                        android:id="@+id/btn_fb_cdrrmo"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="CDRRMO San Pablo FB Page"
                          android:textColor="@color/white"
                          android:textSize="15sp"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:id="@+id/text_fb_cdrrmo"/>
            </LinearLayout>


        </LinearLayout>





                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>



        </LinearLayout>



<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

    <ImageView
            android:layout_width="match_parent"
