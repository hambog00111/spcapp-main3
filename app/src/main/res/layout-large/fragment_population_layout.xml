<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
    >


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="7dp">




            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/spc_logo"
                        android:id="@+id/imageView2"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="15dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Republic of the Philippines"
                            android:textColor="@color/white"
                            android:layout_marginTop="20dp"
                            android:textSize="17dp"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CITY OF SEVEN LAKES"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="23sp"
                            android:layout_marginTop="3dp"

                    />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <ImageView android:layout_width="match_parent"
                   android:layout_height="300dp"
                   android:src="@drawable/slake0"
                   android:fitsSystemWindows="true"
                   android:layout_gravity="center"
                   android:scaleType="centerCrop"
                   android:padding="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
        >
            <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:orientation="vertical"
                    android:background="@drawable/text_border"
                    android:layout_marginRight="10dp">

                <Button
                        android:id="@+id/btn_sanpablo_population"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/sanpablenos"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="San Pableños"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:orientation="vertical"
                    android:background="@drawable/text_border"
                    android:layout_marginRight="10dp">

                <Button
                        android:id="@+id/btn_education_education"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/education"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="Education"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:orientation="vertical"
                    android:background="@drawable/text_border"
                    android:layout_marginRight="10dp">

                <Button
                        android:id="@+id/btn_population_population"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/population"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="Population"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:orientation="vertical"
                    android:background="@drawable/text_border"
                    android:layout_marginRight="5dp">

                <Button
                        android:id="@+id/btn_livelihood_education"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/livelihood"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="Livelihood"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        android:textColor="@color/white"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="POPULATION"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
            />

            <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/population_population"
                    android:textColor="@color/white"
                    android:layout_marginStart="35dp"
                    android:textSize="17sp"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="POPULATION SIZE AND GROWTH RATE"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
            />

            <TextView
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="TABLE: Population Size and Average Annual Growth Rate San Pablo City, Laguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:paddingBottom="12dp"
            />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp">

                <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Census Data"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:paddingBottom="15dp"/>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="Total Population"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="20sp"
                    />

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="95dp"
                                android:layout_height="wrap_content"
                                android:text="Laguna"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="20sp"
                        />
                        <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="San Pablo"
                                android:gravity="center"
                                android:textSize="20sp"
                        />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:text="Annual Growth Rate"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="20sp"
                    />

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="95dp"
                                android:layout_height="wrap_content"
                                android:text="Laguna"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="20sp"
                        />
                        <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="San Pablo"
                                android:gravity="center"
                                android:textSize="20sp"
                        />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp">

                <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="@string/population_censusdata"
                            android:textSize="20sp"
                    />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="@string/population_tp_laguna"
                            android:textSize="20sp"
                    />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="@string/population_tp_spc"
                            android:textSize="20sp"
                    />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="@string/population_agr_laguna"
                            android:textSize="20sp"
                    />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="@string/population_agr_spc"
                            android:textSize="20sp"
                    />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="79dp"
                    android:text="@string/tab_govphil"
                    android:layout_marginTop="8dp"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/white"

            />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="8dp"
            >


                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/asti"
                        android:id="@+id/imageView5"
                        android:layout_weight="1"
                        android:layout_marginRight="7dp"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/dict"
                        android:id="@+id/imageView6"
                        android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/phlogo"
                    android:layout_weight="1"
                    android:layout_marginBottom="15dp"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:text="@string/Reps"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Rep"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginBottom="2dp"/>

                <TextView
                        android:text="© 2019 San Pablo City Goverment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:id="@+id/textView8"/>

            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/transpa"
                    android:layout_weight="1"
                    android:layout_marginBottom="15dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>