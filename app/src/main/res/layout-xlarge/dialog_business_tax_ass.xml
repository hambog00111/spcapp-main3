<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
            android:background="@drawable/background">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request for online Assessment"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/txt_assess_first"
              android:textColor="@color/white"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:textSize="25sp"
              android:hint="First Name"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Middle Name:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/txt_assess_middle"
              android:textColor="@color/white"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:textSize="25sp"
              android:layout_marginBottom="10dp"
              android:hint="Middle Name"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/txt_assess_last"
              android:textColor="@color/white"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:textSize="25sp"
              android:hint="Last Name"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reference Numnber:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/txt_assess_ref"
              android:textColor="@color/white"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:textSize="25sp"
              android:inputType="number"
              android:layout_marginBottom="10dp"
              android:hint="112388548"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/txt_assess_email"
              android:textColor="@color/white"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:textSize="25sp"
              android:layout_marginBottom="5dp"
              android:hint="example@gmail.com"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*please enter your own valid email address*"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"/>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity=""
                  android:textStyle="bold"
                  android:textAllCaps="true"
                  android:textColor="@color/white"
                  android:layout_margin="20dp"
                  android:text="send request"
                  android:id="@+id/btn_assess_send"
                  android:textSize="25sp"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity=""
                  android:textStyle="bold"
                  android:textAllCaps="true"
                  android:textColor="@color/white"
                  android:layout_margin="20dp"
                  android:text="cancel"
                  android:id="@+id/btn_assess_cancel"
                  android:textSize="25sp"/>
    </LinearLayout>




</LinearLayout>